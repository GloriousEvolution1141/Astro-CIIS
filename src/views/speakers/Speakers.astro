---
import CardSpeakers from "./components/CardSpeakers.astro"
import { FlagArgentina, FlagBolivia, FlagBrazil, FlagChile, FlagPeru, FlagSouthKorea } from '../../../public/icons/flags/index.astro'
import { ImageAlfredo, ImageCesar, ImageClaudioMeneses, ImageEric, ImageFerdinand, ImageRene, ImageRicardo, ImageYeonsoon } from '../../assets/speakers/index.astro'
import speaker from "./services/speaker"
---

<section id="speakers" class="pt-48">
    <div class="m-auto max-w-5xl pb-16">
        <h2 class="text-2xl font-bold text-center text-secondary sm:text-6xl">
            Conoce a nuestros<span class="text-primary"> Ponentes</span>
        </h2>
    </div>
    <div class="m-auto max-w-5xl grid gap-y-8 grid-cols-1 lg:grid-cols-3 sm:grid-cols-2">
        {
            speaker.map((speaker) => (
                <CardSpeakers 
                    nameSpeaker={speaker.name} 
                    rolSpeaker={speaker.description} 
                    link_image={speaker.image} 
                    alt="Imagen del ponente Yeonsoon">
                </CardSpeakers>
            ))
        }
    </div>
</section>

<style>
    .text-primary {
        background-image: var(--accent-gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .text-secondary {
        background-image: var(--accent-gradient-secondary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>