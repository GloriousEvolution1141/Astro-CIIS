---
import Step from "./components/Step.astro";
const urlPath = Astro.url.pathname;
const active1 = urlPath.endsWith("/planes") ? "active" : "";
const active2 = urlPath.endsWith("/publicogeneral") || urlPath.endsWith("/delegaciones") || urlPath.endsWith("/estudiantesunjbg") || urlPath.endsWith("/docentesunjbg") || urlPath.endsWith("/estudianteesis") ? "active" : "";
const active3 =  urlPath.endsWith("/pago")  ? "active" : "";
const active4 =  urlPath.endsWith("/pruebas")  ? "active" : "";
---

<section class="w-dvw h-dvh flex flex-col justify-star items-center p-6">
    <div class="w-full flex justify-center py-8">
        <div class="flex items-center justify-center flex-row ">
            <div
                class={`${active1} ${active2} bg-[#3e5ba330] text-[#000415] rounded-full w-10 h-10 flex items-center justify-center font-bold sm:w-12 sm:h-12`}
            >
                <span class="text-lg">1</span>
            </div>
            <Step active={active2}/>
            <div
                class={`${active2} bg-[#3e5ba330]  text-[#000415] rounded-full w-10 h-10  flex items-center justify-center font-bold`}
            >
                <span>2</span>
            </div>
            <Step active={active3}/>
            <div
                class={`${active3} bg-[#3e5ba330] text-[#000415] rounded-full w-10 h-10  flex items-center justify-center font-bold`}
            >
                <span>3</span>
            </div>
            <Step active={active4}/>
            <div
                class={`${active4} bg-[#3e5ba330] text-[#000415] rounded-full w-10 h-10  flex items-center justify-center font-bold `}
            >
                <span>4</span>
            </div>
        </div>
    </div>
    <div class="text-center text-primary-600 text-4xl font-bold py-6">
        Elige el plan perfecto para ti
    </div>
    <slot />
</section>

<style>
    .active {
        background: white;
        color: black;
    }
</style>
