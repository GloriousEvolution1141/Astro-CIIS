---
import Plan from "./components/Plan.astro";
import { plans } from "./services/plan";
---

<section class="w-dvw h-dvh flex flex-col justify-star items-center p-12">
    <div class="w-full flex justify-center py-8">
        <div class="flex items-center justify-center flex-row ">
            <div
                class="bg-white text-red-400 rounded-full w-12 h-12 flex items-center justify-center font-bold"
            >
                <span>1</span>
            </div>
            <div class="flex">
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
            </div>
            <div
                class="bg-white text-white rounded-full w-12 h-12 flex items-center justify-center font-bold"
            >
                <span>2</span>
            </div>
            <div class="flex">
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
            </div>
            <div
                class="bg-white text-white rounded-full w-12 h-12 flex items-center justify-center font-bold"
            >
                <span>3</span>
            </div>
            <div class="flex">
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
                <div class="h-[10px] w-10 rounded-[4px] bg-yellow-500 m-3"></div>
            </div>
            <div
                class="bg-white text-white rounded-full w-12 h-12 flex items-center justify-center font-bold"
            >
                <span>4</span>
            </div>
        </div>
    </div>
    <div class="text-center text-primary-600 text-4xl font-bold py-6">
        Elige el plan perfecto para ti
    </div>
    <div
        class="flex flex-row justify-center items-center flex-wrap py-5 gap-16"
    >
        {
            plans.map((item) => (
                <Plan
                    name={item.title}
                    description={item.description}
                    price={item.cost}
                    src={item.src}
                />
            ))
        }
    </div>
</section>
