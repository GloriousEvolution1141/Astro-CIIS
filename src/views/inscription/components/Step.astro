---
interface Props {
    active: string;
}

const { active } = Astro.props;
---

<div class="flex">
    <div class={`h-[10px] w-6 rounded-[4px] ${active} bg-[#3e5ba330] m-3 sm:w-10`}></div>
    <div class={`hidden h-[10px] w-6 rounded-[4px] ${active} bg-[#3e5ba330] m-3 sm:w-10 sm:block`}></div>
    <div class={`hidden h-[10px] w-6 rounded-[4px] ${active} bg-[#3e5ba330] m-3 sm:w-10 sm:block`}></div>
</div>

<style>
    .active {
        background: white;
        color: black;
    }
</style>