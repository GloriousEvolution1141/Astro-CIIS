---
import Card from "../about/components/Card.astro";
import aboutCIIS from "../about/services/aboutService";
import type Props from "./adapters/service";
---

<section id="about" class="bg-[url(../../../public/gifOptimizado.gif)] bg-cover overflow-hidden relative text-white pt-[40px] pb-[26px] text-center box-shadow-0px-0px-65px-[#000820] bg-fixed before:content-[''] before:bg-[#000820cc] before:absolute before:top-0 before:left-0 before:right-0 before:bottom-0 slide-in-left">
    <div class="w-full px-4 mx-auto">
        <div class="flex flex-wrap mx-[-15px] justify-center align-middle gap-10">
            {
                aboutCIIS.map((item) => (
                    <Card title1={item.title1} title2={item.title2} description={item.description} />
                ))
            }
        </div>
    </div>  
</section>

<style>

    .slide-in-left {
        animation: slide-in-left both;
        animation-timeline: view();
        animation-range-start: cover 10%;
        animation-range-end: contain 20%;
        animation-duration: 0.5s;
        animation-timing-function: cubic-bezier(0.250, 0.460, 0.450, 0.940);
    }

    @keyframes slide-in-left {
        0% {
            transform: translateX(-400px);
            opacity: 0;
        }
        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }

</style>