---
const bgButton = "bg-gradient-to-b from-[#3152df95] to-[#1e254595]";
const shadowButton =
  "shadow-[inset_0_6px_12px_#4c64d2,0_0_17px_rgba(110,137,255,0.77),inset_0_1px_10px_hsla(0,0%,100%,0.55)]";
const shadowButtonHover =
  "hover:shadow-[inset_0_6px_12px_#4c64d2,_0_0_34px_rgba(110,137,255,0.77),_inset_0_1px_10px_hsla(0,0%,100%,0.55)]";

interface ContestProps{
  title: string;
  description: string;
  image: string;
  date: string;
  time: string;
  place: string;
  base_rules: string;
  link_form: string;
}

const {title, description, image, date, time, place, base_rules, link_form} = Astro.props;
---

<div class="flex flex-col justify-center items-center">
    <div
      class=`w-2/3 rounded-3xl p-8 overflow-hidden ${bgButton} text-white group `
    >
      <div class="flex flex-row">
        <div class="w-2/3 p-2">
          <div class="flex flex-row items-center justify-center">
            <slot name="iconContest" />
            <h4 class="text-4xl font-bold ml-4 group-hover:underline underline-offset-8">{title}</h4>
          </div>
          <div
            class="flex flex-col items-center justify-center text-lg mt-4 gap-4"
          >
            <p class="text-center font-light my-4 text-gray-200">
              {description}
            </p>
            <hr class=" border-solid border-blue-800 w-full border-2 opacity-70"></hr>
            <div class="flex flex-row gap-4 pt-4">
              <span class="font-light text-gray-200">
                <strong class="font-bold">Fecha: </strong>{date}</span
              >
              <span class="font-light text-gray-200"
                ><strong class="font-bold">Hora: </strong>{time}</span
              >
            </div>
            <p class="text-center font-light my-4 text-gray-200">
              <strong class="font-bold">Lugar: </strong>{place}</span>
            </p>
            <div class="flex flex-row items-center justify-center gap-6 mt-4">
              <a target="_blank" rel="noopener noreferrer" href={base_rules} class="w-32 py-2 flex justify-center items-center px-4 bg-blue-900/35 rounded-lg hover:bg-blue-800 transition-transform">Bases</a>
              <a target="_blank" rel="noopener noreferrer" href={link_form} class="w-32 py-2 flex justify-center items-center px-4 bg-blue-900 rounded-lg hover:bg-blue-800 transition-transform">Inscripci√≥n</a>
            </div>
          </div>
        </div>
        <div class="w-1/3 p-2 flex justify-center items-center">
          <img src=`${image}`/>
        </div>
      </div>
    </div>
  </div>