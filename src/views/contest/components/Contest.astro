---
const bgButton = "bg-gradient-to-b from-[#3152df95] to-[#1e254595]";
const shadowButton =
  "shadow-[inset_0_6px_12px_#4c64d2,0_0_17px_rgba(110,137,255,0.77),inset_0_1px_10px_hsla(0,0%,100%,0.55)]";
const shadowButtonHover =
  "hover:shadow-[inset_0_6px_12px_#4c64d2,_0_0_34px_rgba(110,137,255,0.77),_inset_0_1px_10px_hsla(0,0%,100%,0.55)]";

interface ContestProps{
  title: string;
  description: string;
  image: string;
  date: string;
  time: string;
  place: string;
  base_rules: string;
  link_form: string;
}

const {title, description, image, date, time, place, base_rules, link_form} = Astro.props;
---

<div class="flex flex-col justify-center items-center slide-in-left">
    <div
      class=`w-[260px] sm:w-[600px] lg:w-2/3 rounded-3xl px-4 py-4 lg:px-8 lg-py-8 overflow-hidden ${bgButton} text-white group`
    >
      <div class="flex flex-col lg:flex-row items-center lg:justify-start">
        <div class="w-2/3 p-2">
          <div class="flex flex-row items-center justify-center">
            <slot class="hidden sm:block" name="iconContest" />
            <h4 class="text-balance text-2xl sm:text-3xl lg:text-4xl font-bold ml-4 group-hover:underline underline-offset-8 text-center lg:text-start">{title}</h4>
          </div>
          <div
            class="flex flex-col items-center justify-center text-lg mt-4 gap-4"
          >
            <p class="text-pretty text-sm sm:text-base text-center font-light my-4 text-gray-200">
              {description}
            </p>
            <hr class=" border-solid border-blue-800 w-full border-2 opacity-70"></hr>
            <div class="flex flex-row gap-4 pt-4">
              <span class="font-light text-gray-200 text-sm sm:text-base">
                <strong class="font-bold">Fecha: </strong>{date}</span
              >
              <span class="font-light text-gray-200 text-sm sm:text-base"
                ><strong class="font-bold">Hora: </strong>{time}</span
              >
            </div>
            <p class="text-center font-light my-4 text-gray-200 text-sm sm:text-base text-pretty">
              <strong class="font-bold">Lugar: </strong>{place}</span>
            </p>
            <div class="flex flex-col lg:flex-row w-full items-center justify-center gap-6 mt-4">
              <a target="_blank" rel="noopener noreferrer" href={base_rules} class="w-full sm:w-32 py-2 flex justify-center items-center px-4 bg-blue-900/35 rounded-lg hover:bg-blue-800 transition-transform text-sm sm:text-base uppercase sm:normal-case">Bases</a>
              <a target="_blank" rel="noopener noreferrer" href={link_form} class="w-full sm:w-32 py-2 flex justify-center items-center px-4 bg-blue-900 rounded-lg hover:bg-blue-800 transition-transform text-sm sm:text-base uppercase sm:normal-case">Inscripci√≥n</a>
            </div>
          </div>
        </div>
        <div class="w-1/3 p-2 justify-center items-center hidden sm:flex">
          <img src=`${image}` 
                alt="Este es un robot"
                loading="lazy"
                decoding="async"
                width={1600}
                height={900}
                draggable="false"/>
        </div>
      </div>
    </div>
  </div>


  <style>

    .slide-in-left {
        animation: slide-in-left both;
        animation-timeline: view();
        animation-range-start: cover -10%;
        animation-range-end: contain 10%;
        animation-duration: 0.5s;
        animation-timing-function: cubic-bezier(0.250, 0.460, 0.450, 0.940);
    }

    @keyframes slide-in-left {
        0% {
            transform: translateX(-400px);
            opacity: 0;
        }
        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }

</style>