---
import LayoutRegister from "../../../layouts/LayoutRegister.astro";
import InscriptionContainer from "../../../views/inscription/InscriptionContainer.astro";
import { plans }from "../../../views/inscription/services/plan";
import Plan from "../../../views/inscription/components/Plan.astro";
---

<LayoutRegister title="CIIS XXV">
    <InscriptionContainer>
        <div
        class="flex flex-row justify-center items-center flex-wrap py-5 gap-16"
    >
        {
            plans.map((item) => (
                <Plan
                    name={item.title}
                    description={item.description}
                    price={item.cost}
                    src={item.src}
                />
            ))
        }
    </div>
    </InscriptionContainer>
</Layout>